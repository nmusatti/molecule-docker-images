rel="32"
for d in fedora-pys fedora-pys-systemd
do
    pushd $d
    docker build -t "nmusatti/$(basename $PWD):$rel" --no-cache .
    if [[ $(basename $PWD) =~ systemd ]]; then
        ( sudo docker run -v /sys/fs/cgroup:/sys/fs/cgroup:ro -it --rm --privileged "nmusatti/$(basename $PWD):$rel" /bin/bash )
    else
        docker run -it --rm "nmusatti/$(basename $PWD):$rel"
    fi
    docker push "nmusatti/$(basename $PWD):$rel"
    popd
done
